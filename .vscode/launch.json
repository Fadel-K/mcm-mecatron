{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cortex-Debug (WSL, apt tools)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",

      "executable": "${workspaceFolder}/.pio/build/nucleo_f446re/firmware.elf",

      "gdbPath": "/usr/bin/gdb-multiarch",
      "serverpath": "/usr/bin/openocd",
      "configFiles": ["interface/stlink.cfg", "target/stm32f4x.cfg"],
      "searchDir": ["/usr/share/openocd/scripts"],

      "device": "STM32F446RE",
      "cwd": "${workspaceFolder}",
      "runToMain": true,
      "preLaunchTask": "PlatformIO: Build",
      "svdFile": "${workspaceFolder}/STM32F446x.svd",
      "postAttachCommands": ["set print pretty on","set pagination off","thbreak main"]
    }
  ]
}
