{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cortex-Debug (ST-LINK, OpenOCD)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/.pio/build/nucleo_f446re/firmware.elf",
      "armToolchainPath": "${command:platformio.getConfiguration}.packages.toolchain-gccarmnoneeabi.path",
      "device": "STM32F446RE",
      "runToMain": true,
      "configFiles": [
        "interface/stlink.cfg",
        "target/stm32f4x.cfg"
      ],
      "preLaunchTask": "PlatformIO: Build",
      "svdFile": "${workspaceFolder}/STM32F446x.svd",
      "postAttachCommands": [
        "set print pretty on",
        "set pagination off",
        "thbreak main"
      ]
    }
  ]
}
